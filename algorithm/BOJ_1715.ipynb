   "source": [
    "import sys\n",
    "import heapq\n",
    "N = int(sys.stdin.readline())\n",
    "heap = []\n",
    "for _ in range(N):\n",
    "    heapq.heappush(heap,int(sys.stdin.readline()))\n",
    "result = 0\n",
    "while len(heap) >=2:\n",
    "    A = heapq.heappop(heap)\n",
    "    B = heapq.heappop(heap)\n",
    "    heapq.heappush(heap,A+B)\n",
    "    result += (A+B)\n",
    "print(result)"
   ]
  }
